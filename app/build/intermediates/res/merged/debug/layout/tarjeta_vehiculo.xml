<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="4.5"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="match_parent"
            android:text="1"
            android:gravity="center"
            android:layout_marginLeft="19dp"
            android:src="@drawable/siluetas_vehiculos"
            android:id="@+id/imagenTarjetaVehiculo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginLeft="13dp">

            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Marca"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/textViewMarcaTarjetaVehiculo"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Modelo"
                android:textSize="15sp"
                android:id="@+id/textViewModeloTarjetaVehiculo"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Apodo"
                android:textSize="15sp"
                android:id="@+id/textViewApodoTarjetaVehiculo"/>

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:src="@drawable/editar"
            android:id="@+id/editarTarjetaVehiculo"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:src="@drawable/borrar"
            android:id="@+id/borrarTarjetaVehiculo"/>

    </LinearLayout>

</android.support.v7.widget.CardView>